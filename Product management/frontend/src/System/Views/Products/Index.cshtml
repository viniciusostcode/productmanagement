@{
    ViewData["Title"] = "Products";
}
<table id="dataTable" class="table table-dark table-striped rounded-table">
    <p id="noProductsMessage">You have not registered any products yet.</p>
    <div id="alert-container"></div>
    <thead class="thead">
        <tr>
            <th scope="col">ID</th>
            <th scope="col"><i class="fa-solid fa-tag"></i> Product</th>
            <th scope="col"><i class="fa-solid fa-calendar"></i> Date</th>
            <th scope="col"><i class="fa-solid fa-chart-simple"></i>  Situation</th>
            <th scope="col"><i class="fa-solid fa-plus"></i> Quantity</th>
            <th scope="col"><i class="fas fa-coins"></i> Currency Code</th>
            <th scope="col"><i class="fa-solid fa-dollar-sign"></i> Price</th>
            <th scope="col"><i class="fa-solid fa-user"></i> User</th>
        </tr>
    </thead>

    <tbody>
        <tr class="fadeIn">
            <th scope="row"></th>
        </tr>
        <tr class="fadeIn">
            <th scope="row"></th>
        </tr>
        <tr class="fadeIn">
            <th scope="row"></th>
        </tr>
    </tbody>
</table>
<div class="action-buttons">
    <button type="button" class="btn btn-primary" id="openModalBtn"><i class="fa-solid fa-plus"></i></i> Add Product</button>
    <button type="button" class="btn btn-dark" id="editBtn"><i class="fa-regular fa-pen-to-square"></i> Edit Product</button>
    <button type="button" class="btn btn-secondary" id="removeBtn"><i class="fa-solid fa-xmark"></i> Remove Product</button>
</div>

<div class="modal" tabindex="-1" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add new product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" id="closeModalAddBtn" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="myForm">
                    <div class="form-group mb-3">
                        <b><label for="formGroupExampleInput">Product</label></b>
                        <input type="text" class="form-control" id="productInput" name="product" placeholder="Enter the product name..." required>
                    </div>
                    <div class="form-group mb-3">
                        <b><label for="formGroupExampleInput">Situation</label></b>
                        <div>
                            <select class="select form-control" id="situationInput" name="situation">
                                <option value="Sold">Sold</option>
                                <option value="Purchased">Purchased</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <b><label for="formGroupExampleInput">Quantity</label></b>
                        <input type="text" class="form-control" id="quantityInput" name="quantity" placeholder="Enter the quantity..." required>
                    </div>
                    <div class="form-group mb-3">
                        <b><label for="formGroupExampleInput">Currency Code</label></b>
                        <div>
                            <select class="select form-control" id="currencyInput" name="currencyCode">
                                <option value="BRL">Brazillian Real</option>
                                <option value="USD">Dollar</option>
                            </select>
                        </div>
                        </div>
                    <div class="form-group mb-3">
                        <b><label for="formGroupExampleInput">Price</label></b>
                        <input type="text" class="form-control" id="priceInput" name="price" placeholder="Enter the price sold or purchased..." required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="cancelModalAddBtn">Cancel</button>
                <button type="button" class="btn btn-primary" id="addBtn">Confirm</button>

                <div class="response-message" id="responseMessage"></div>
            </div>

        </div>
    </div>
</div>

<div class="modal" id="edit-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" id="closeModalEditBtn" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancelModalEditBtn" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveChangesEditBtn">Confirm</button>

                <div class="response-message" id="responseMessage"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="remove-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" id="closeModalRemoveBtn" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <label for="editProduct" class="form-label">Are you sure that you want to delete this product?</label>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancelModalRemoveBtn" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveChangesRemoveBtn">Confirm</button>
            </div>
        </div>
    </div>
</div>
      </div>
    </div>

<div id="user" data-username="@ViewData["UserName"]" style="display: none;">
    Olá, @ViewData["UserName"]!
</div>




